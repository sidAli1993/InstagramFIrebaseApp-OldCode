<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/low_padding"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/edt_height_small"
        android:text="Hi Hello how are you"
        android:textColor="@color/black"
        android:background="@drawable/box_msg_sent"
        android:gravity="center"
        android:textSize="@dimen/text_small"
        android:id="@+id/tv_list_item_my_msg"
        android:padding="@dimen/low_padding"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_list_item_my_msg_date"
        android:layout_toLeftOf="@id/tv_list_item_my_msg"
        android:textSize="@dimen/text_v_small"
        android:layout_marginRight="@dimen/low_normal_padding"
        android:textColor="@color/gray"
        android:text="Yesterday"/>
</RelativeLayout>