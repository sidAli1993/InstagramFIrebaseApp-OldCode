<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relav_list_item_data">
        <com.jackandphantom.circularimageview.CircleImage
            android:layout_width="@dimen/messages_list_item_imv_h_w"
            android:layout_height="@dimen/messages_list_item_imv_h_w"
            android:src="@drawable/ic_tempura"
            android:layout_centerVertical="true"
            android:background="@color/white"

            android:id="@+id/imv_list_item"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imv_list_item"
            android:layout_marginLeft="@dimen/low_normal_padding"
            android:textSize="@dimen/text_small"
            android:layout_marginTop="@dimen/low_normal_padding"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/tv_list_item_person_name"
            android:text="Mirza ALi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imv_list_item"
            android:layout_marginLeft="@dimen/low_normal_padding"
            android:id="@+id/tv_list_item_status"
            android:textSize="@dimen/text_small"
            android:textColor="@color/gray"
            android:layout_below="@id/tv_list_item_person_name"
            android:text="No body,No Crime"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_list_item_date"
            android:layout_marginRight="@dimen/low_normal_padding"
            android:textSize="@dimen/text_small"
            android:textColor="@color/gray"
            android:text="Yesterday"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>

</LinearLayout>